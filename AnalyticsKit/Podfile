# Uncomment the next line to define a global platform for your project

target 'AnalyticsKit' do
  platform :ios, '8.4'
  use_frameworks!

  # Pods for AnalyticsKit

  pod 'Mixpanel', '~> 3.1.4'
  pod 'Adjust', '~> 4.5'
  pod 'Localytics'
  pod 'GoogleAnalytics'
  pod 'Parse'
  pod 'mParticle-Apple-SDK', '~> 6'
  # pod 'Apsalar'
  pod 'NewRelicAgent'
  pod 'Flurry-iOS-SDK'
  pod 'Crashlytics'
  pod 'Intercom'
  pod 'MobileCenter'
  pod 'Firebase'
  pod 'AppsFlyerFramework'

  target 'AnalyticsKitTests' do
    inherit! :search_paths
    # Pods for testing

    pod 'OCMock'
  end

end

pre_install do |installer|
    Pod::Installer::Xcode::TargetValidator.send(:define_method, :verify_no_static_framework_transitive_dependencies) {}
end
